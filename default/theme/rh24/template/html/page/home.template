			if (this.innerHTML == '+') {
				SetPrefs('show_advanced', 1);
				ShowAdvanced(1);
				this.innerHTML = '-';
				return false;
			} else {
				SetPrefs('show_advanced', 0);
				ShowAdvanced(1);
